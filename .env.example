# ===========================================
# Configuration Google OAuth & Sheets
# ===========================================

# Vos identifiants OAuth2 Google
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# ID de votre Google Spreadsheet (trouvé dans l'URL)
# Exemple: https://docs.google.com/spreadsheets/d/VOTRE_SPREADSHEET_ID/edit
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id_here

# Nom de la feuille dans le spreadsheet (par défaut: Emails)
GOOGLE_SHEET_NAME=Emails

# Token de rafraîchissement (à obtenir après la première authentification)
GOOGLE_REFRESH_TOKEN=

# Port du serveur
PORT=8000
